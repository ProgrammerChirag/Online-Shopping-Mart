<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@id/recycler_view_products"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:padding="@dimen/fragment_title_padding_10"
    android:background="#EBF0FF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:layout_marginTop="@dimen/fragment_title_padding_10"
        android:id="@+id/totalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textStart"
        android:background="@android:color/transparent"
        android:fontFamily="@font/baloo_bhai"
        android:textSize="22sp"
        android:text="@string/total_price_2400_inr"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/totalPrice"
        android:textSize="22sp"
        android:fontFamily="@font/baloo_bhai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="textStart"
        android:text="@string/delivery_charge_40_inr"
        android:id="@+id/delivery_charge"
        />
    <TextView
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_charge"
        android:textSize="22sp"
        android:fontFamily="@font/baloo_bhai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="textStart"
        android:text="@string/total_savings_0_inr"
        android:id="@+id/discount"
        />



    <TextView
        android:id="@+id/totalAmount"
        android:fontFamily="@font/baloo_bhai"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/fragment_title_padding_10"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/discount"
        android:textSize="22sp"
        android:text="@string/total_amount_to_pay_2240_inr"
        />


    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>