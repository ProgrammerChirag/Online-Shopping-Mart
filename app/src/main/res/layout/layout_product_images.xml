<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout


    android:background="#EBF0FF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
        android:id="@+id/spin_kit"
        layout="@layout/custom_dialog_2"
        />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint_layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/edit_text_style"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/recycler_view_images"
            app:layout_constraintRight_toRightOf="parent"
            />

    </LinearLayout>

    <ImageView
        android:contentDescription="@string/todo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20sp"
        android:src="@drawable/ic_camera_icon"
        app:layout_constraintBottom_toTopOf="@id/next_btn"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/click_from_camera"
        app:layout_constraintRight_toLeftOf="@id/choose_from_galary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/camera"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/click_from_camera"
        app:layout_constraintRight_toRightOf="@id/click_from_camera"
        android:fontFamily="@font/montserrat"
        android:id="@+id/hint1"
        app:layout_constraintTop_toBottomOf="@id/click_from_camera"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/choose_from_galary"
        app:layout_constraintRight_toRightOf="@id/choose_from_galary"
        android:fontFamily="@font/montserrat"
        android:text="@string/choose"
        android:textStyle="bold"
        android:id="@+id/hint2"
        app:layout_constraintTop_toBottomOf="@id/choose_from_galary"
        />

    <ImageView
        android:contentDescription="@string/todo"
        android:layout_marginTop="20sp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/next_btn"
        android:src="@drawable/ic_choose_from_gal"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/click_from_camera"
        android:id="@+id/choose_from_galary"
        />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/item_btn_style1"
        android:drawableEnd="@drawable/ic_arrow_forward_white"
        android:fontFamily="@font/baloo_bhai"
        android:padding="10dp"
        android:text="@string/next"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>