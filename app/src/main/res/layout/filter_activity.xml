<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="#EBF0FF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar10"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/fragment_title_padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_filter"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"
                />

        </androidx.appcompat.widget.Toolbar>


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/ChooseCategory"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            android:background="@drawable/shape3"
            app:layout_constraintTop_toBottomOf="@id/toolbar10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:background="@drawable/shape4"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/choose_category"
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#fff"
                android:id="@+id/title1"
                />

            <Spinner
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                app:layout_constraintTop_toBottomOf="@+id/title1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/fragment_title_padding_10"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/chooseType"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            android:background="@drawable/shape3"
            app:layout_constraintTop_toBottomOf="@id/ChooseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:background="@drawable/shape4"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/choose_product_type"
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#fff"
                android:id="@+id/title2"
                />

            <Spinner
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/fragment_title_padding_10"                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                app:layout_constraintTop_toBottomOf="@+id/title2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/chooseSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            android:background="@drawable/shape3"
            app:layout_constraintTop_toBottomOf="@id/chooseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:background="@drawable/shape4"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/choose_product_size"
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#fff"
                android:id="@+id/title3"
                />

            <Spinner
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/fragment_title_padding_10"
                android:layout_marginTop="@dimen/fragment_title_padding_10"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                app:layout_constraintTop_toBottomOf="@+id/title3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/chooseColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:background="@drawable/shape3"
        app:layout_constraintTop_toBottomOf="@id/chooseSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:background="@drawable/shape4"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/choose_product_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#fff"
                android:id="@+id/title4"
                />

        <Spinner
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/fragment_title_padding_10"
            android:layout_marginTop="@dimen/fragment_title_padding_10"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            app:layout_constraintTop_toBottomOf="@+id/title4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/apply_btn"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="@string/apply"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#fff"
            android:background="@drawable/item_btn_style2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_title_padding_10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


