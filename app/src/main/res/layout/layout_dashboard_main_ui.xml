<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="end"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">
<!--    tools:openDrawer="start"-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/custom_dialog_2"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint_layout"
        android:layout_height="match_parent">



        <androidx.appcompat.widget.Toolbar
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            >
         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <EditText
                 android:textAlignment="center"
                 android:fontFamily="@font/roboto_medium"
                 android:id="@+id/search_view"
                 android:inputType="textAutoComplete"
                 app:layout_constraintLeft_toLeftOf="parent"
                 android:hint="@string/search"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 android:layout_width="280dp"
                 android:layout_marginEnd="40dp"
                 android:layout_height="wrap_content"
                 android:padding="5dp"
                 android:imeOptions="actionSearch"
                 android:drawableEnd="@drawable/ic_baseline_search_24"
                 android:textSize="18sp"
                 android:background="@drawable/edit_text_style3"
                 android:autofillHints="" />

             <ImageView
                 android:id="@+id/cart"
                 android:contentDescription="@string/todo"
                 android:layout_marginRight="@dimen/fragment_title_padding_10"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:src="@drawable/ic_baseline_shopping_basket_24"
                 />

         </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:fillViewport="false"
            app:layout_goneMarginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/constraint_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/top_trending_products"
                    layout="@layout/layout_top_trending"
                    />


                <include
                    app:layout_constraintTop_toBottomOf="@id/constraint_layout7"
                    app:layout_constraintBottom_toTopOf="@id/product_list"
                    layout="@layout/item_category_wise"
                    />

                <TextView
                    android:id="@+id/explore"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="5dp"
                    android:padding="@dimen/fragment_title_padding_10"
                    app:layout_constraintTop_toBottomOf="@id/item_cat"
                    android:text="@string/explore_products"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/school"
                    app:drawableEndCompat="@drawable/ic_arrow_forward_white" />


                <androidx.recyclerview.widget.RecyclerView

                    android:foregroundGravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/explore"
                    android:id="@+id/product_list"
                    android:layout_marginTop="15dp"
                    />

                <View
                    app:layout_constraintTop_toTopOf="@id/product_list"
                    app:layout_constraintBottom_toBottomOf="@id/product_list"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="0.5dp"
                    android:layout_height="0dp"
                    android:background="#000000" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="#fff"
        app:headerLayout="@layout/layout_header_sidebar"
        app:menu="@menu/side_manu_part1"
        android:layout_gravity="start"
        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>