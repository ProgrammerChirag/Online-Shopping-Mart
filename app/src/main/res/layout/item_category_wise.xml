<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/item_cat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll3"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:baselineAligned="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/general"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            >

            <TextView
                app:layout_constraintRight_toLeftOf="@id/CategoryImage1"
                android:id="@+id/categoryName1"
                android:textAlignment="center"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/baloo_bhai"
                android:textSize="25sp"
                android:text="@string/general_stationery"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                app:layout_constraintLeft_toRightOf="@id/categoryName1"
                app:riv_corner_radius="@dimen/fragment_title_padding_10"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/CategoryImage1"
                android:contentDescription="@string/todo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:src="@drawable/general_itmes_image"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        app:layout_constraintBottom_toTopOf="@id/ll1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        android:baselineAligned="false">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/both"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            >

            <TextView
                app:layout_constraintRight_toLeftOf="@id/CategoryImage2"
                android:id="@+id/categoryName2"
                android:textAlignment="center"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/baloo_bhai"
                android:textSize="25sp"
                android:text="@string/school_stationery"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                app:layout_constraintLeft_toRightOf="@id/categoryName2"
                app:riv_corner_radius="@dimen/fragment_title_padding_10"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/CategoryImage2"
                android:contentDescription="@string/todo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/school_items_image"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll2"
        android:baselineAligned="false">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/office"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            >

            <TextView
                android:layout_marginLeft="@dimen/fragment_title_padding_10"
                android:layout_marginRight="@dimen/fragment_title_padding_10"
                app:layout_constraintRight_toLeftOf="@id/CategoryImage3"
                android:id="@+id/categoryName3"
                android:textAlignment="center"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/baloo_bhai"
                android:textSize="25sp"
                android:text="@string/office_stationery"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                app:layout_constraintLeft_toRightOf="@id/categoryName3"
                android:layout_marginRight="5dp"
                app:riv_corner_radius="@dimen/fragment_title_padding_10"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/CategoryImage3"
                android:contentDescription="@string/todo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/office_items_image"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

