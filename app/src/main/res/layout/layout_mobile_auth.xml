<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mobile_authentication_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@id/login2"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/login"
        android:id="@+id/login"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:padding="@dimen/fragment_title_padding_10"
        android:textStyle="bold"
        />

 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:textColor="#fff"
        android:paddingStart="@dimen/fragment_title_padding_10"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/login_to_continue"
        android:id="@+id/login2"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        />


    <EditText
        android:hint="@string/_10_digit_phone_number"
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:background="@drawable/edit_text_style"
        android:digits="0123456789"
        android:fontFamily="@font/baloo_bhai"
        android:inputType="phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLength="10"
        android:padding="15dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/getOTPBtn"
        app:layout_constraintTop_toBottomOf="@+id/login2"
        tools:layout_editor_absoluteX="20dp"
        android:autofillHints="" />


    <com.chaos.view.PinView

        android:id="@+id/pinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/getOTPBtn"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="30dp"
        android:cursorVisible="true"
        android:hint="Hint."
        android:inputType="text"
        android:itemBackground="@drawable/edit_text_style"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cursorColor="#000"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="4dp"
        app:itemSpacing="@dimen/fragment_title_padding_10"
        app:itemWidth="48dp"
        app:lineColor="#000"
        app:lineWidth="2dp"
        app:viewType="rectangle" />


<Button
    android:textSize="22sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_btn_style1"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textAllCaps="true"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="30dp"
    android:text="@string/get_otp"
    android:textColor="#fff"
    android:fontFamily="@font/baloo_bhai"
    android:textStyle="normal"
    android:id="@+id/getOTPBtn"
    android:elevation="0dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>