<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="#EBF0FF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <include
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/custom_dialog_2"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:id="@+id/toolbar8"
        android:background="#EBF0FF"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="@string/choose_address"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginStart="@dimen/fragment_title_padding_10"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape2"
        android:layout_marginTop="@dimen/fragment_title_padding_10"
        app:layout_constraintTop_toBottomOf="@id/toolbar8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/tag"
            android:background="#5061FF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/fragment_title_padding_10"
            android:textSize="18sp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/choose_address"
            android:textAlignment="center"
            />

        <androidx.viewpager2.widget.ViewPager2
            app:layout_constraintTop_toBottomOf="@id/tag"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/address_slider"
            />
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:id="@+id/dot"
            app:dotsColor="@android:color/holo_blue_dark"
            app:selectedDotColor="@color/colorPrimary"
            app:dotsSize="10dp"
            app:dotsSpacing="5dp"
            app:progressMode="true"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:elevation="@dimen/fragment_title_padding_10"
        android:id="@+id/setPaymentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_btn_style2"
        android:layout_margin="@dimen/fragment_title_padding_10"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:text="@string/set_payment"
        />
    <Button
        android:elevation="0dp"
        android:id="@+id/AddAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/setPaymentBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/item_btn_style4"
        android:layout_margin="@dimen/fragment_title_padding_10"
        android:textColor="#5061FF"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:text="@string/AddAddress"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>