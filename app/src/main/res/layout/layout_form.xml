<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@drawable/formbg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#fff"
        app:civ_border_width="1dp"
        android:background="@drawable/user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_image"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/changeProfile"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#fff"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/change_profile_picture"
        />


    <EditText
        android:layout_marginTop="100dp"
        android:autofillHints="@string/enter_name"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#000"
        android:fontFamily="@font/baloo_bhai"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintBottom_toTopOf="@id/relate1"
        android:background="@drawable/edit_text_style_2"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:hint="@string/enter_name"
        />

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:id="@+id/relate1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_text_style_2"
        >
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:dropDownWidth="match_parent"
            android:popupElevation="10dp"
            android:foregroundTint="#fff"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/edit_text_style_2"
            />
    </RelativeLayout>

    <TextView
        android:autofillHints="@string/enter_your_birthday_date"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#000"
        android:fontFamily="@font/baloo_bhai"
        android:layout_height="wrap_content"
        android:id="@+id/dob"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relate1"
        android:background="@drawable/edit_text_style_2"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_your_birthday_date"
        app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />

    <EditText
        android:autofillHints="@string/enter_email_address"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:fontFamily="@font/baloo_bhai"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dob"
        android:background="@drawable/edit_text_style_2"
        android:drawablePadding="@dimen/fragment_title_padding_10"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_email_address"
        />

    <EditText
        android:autofillHints="@string/address"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/delivery_address"
        android:fontFamily="@font/baloo_bhai"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:background="@drawable/edit_text_style_2"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:hint="@string/enter_your_default_address"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
