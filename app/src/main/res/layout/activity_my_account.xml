<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="#EBF0FF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="DashBoard.ActivityMyAccount">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar9"
        android:background="#EBF0FF"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="@string/my_account"
            />

    </androidx.appcompat.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/download"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar9"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/fragment_title_padding_10"
        android:textColor="#000"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:text="@string/hi_chirag_juneja"
        />

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="@id/setting_options"
        app:layout_constraintBottom_toTopOf="@id/setting_options"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="@dimen/fragment_title_padding_10"
        app:cardBackgroundColor="#fff"
        app:cardElevation="@dimen/fragment_title_padding_10"
        android:layout_height="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                app:layout_constraintRight_toLeftOf="@id/cart"
                android:id="@+id/edit_profile"
                android:contentDescription="@string/todo"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_baseline_edit_24"
                />
            <ImageButton
                app:layout_constraintRight_toLeftOf="@id/my_orders"
                android:id="@+id/cart"
                android:contentDescription="@string/todo"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toRightOf="@+id/edit_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_baseline_shopping_basket_24"
                />

            <ImageButton
                app:layout_constraintLeft_toRightOf="@id/cart"
                android:id="@+id/my_orders"
                android:contentDescription="@string/todo"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_order"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/setting_options"
        android:background="#4763FF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="70dp"
        android:paddingBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/changeAddress"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent"
                    android:focusable="true">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/edit_addresses"
                        android:textSize="18sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shareApp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/share_app"
                        android:textSize="18sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rateApp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/rate_the_app"
                        android:textSize="18sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/getHelp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/get_help"
                        android:textSize="18sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callUs"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/call_us"
                        android:textSize="18sp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail_us"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape3"
                    android:alpha="0.57"
                    tools:ignore="UselessParent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textAlignment="center"
                        android:text="@string/mail_us"
                        android:textSize="18sp"
                    />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>