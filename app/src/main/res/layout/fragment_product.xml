<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/cardView"
    android:background="#fff"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="@dimen/fragment_title_padding_10"
            android:layout_margin="@dimen/fragment_title_padding_10"
            android:contentDescription="@string/todo"
            android:id="@+id/productImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/product_image"
            />

        <TextView
            android:textStyle="bold"
            android:layout_marginStart="@dimen/fragment_title_padding_10"
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/pen_set_5_in_one"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@id/productImage"
            app:layout_constraintTop_toTopOf="@id/productImage" />

        <TextView
            android:layout_marginStart="@dimen/fragment_title_padding_10"
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/price_34rs"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/productImage"
            app:layout_constraintTop_toBottomOf="@id/productName" />

        <TextView
            android:id="@+id/link"
            app:layout_constraintTop_toBottomOf="@id/Price"
            app:layout_constraintLeft_toRightOf="@id/productImage"
            android:layout_marginTop="@dimen/fragment_title_padding_10"
            android:layout_marginStart="@dimen/fragment_title_padding_10"
            android:textSize="18sp"
            android:textColor="#00A8FF"
            android:text="@string/click_here"
            android:fontFamily="@font/baloo_bhai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


